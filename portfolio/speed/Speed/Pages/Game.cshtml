@page
@model Speed.Pages.GameModel
@{
    ViewData["Title"] = "Speed";
}
<div id="waiting_for_game">
    <h1 class="text-center">Waiting for Opponent to Join Game</h1>
</div>

<!-- Modal -->
<div id="game_over" class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Game Over</h5>
        @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
      </div>
      <div id="game_over_message" class="modal-body">
      </div>
      <div class="modal-footer">
        <button id="game_over_gohome" type="submit" class="btn btn-secondary" data-bs-dismiss="modal" asp-page="/Index">Home</button>
        <button id="game_over_playagain" type="submit" class="btn btn-primary" data-bs-dismiss="modal" asp-page="/Game">Play again</button>
      </div>
    </div>
  </div>
</div>

<div id="game_div">
    <div class="row border border-danger border-3 rounded bg-danger">
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="other_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
        @for(int i = 0; i < 5; i ++)
        {
            <div class="opp_hand_div col col-md-2 col-sm-2">
                <img class="opp_hand img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        }
    </div>
    <div class="row border border-white bg-info">
        <div class="col col-md-2 col-sm-2 offset-2">
            <img id="pick_one" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
        <div class="col col-md-2 col-sm-2">
            <div class="dropzone" id="play_pile_one">
                <img id="pile_one" class="img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        </div>
        <div class="col col-md-2 col-sm-2">
            <div class="dropzone" id="play_pile_two">
                <img id="pile_two" class="img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        </div>
        <div class="col col-md-2 col-sm-2">
            <img id="pick_two" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
    </div>
    <div id="player_hand" class="row border border-success border-3 rounded bg-success">
        @for(int i = 0; i < 5; i ++)
        {
            <div class="col col-md-2 col-sm-2">
                <p class="drag" id="@i">
                    <img id="my_hand_@i" class="player_hand img-fluid" src="../lib/cards/card_back.png"/>
                </p>
            </div>
        }
        <div id="speed_btn" class="col col-md-10 col-sm-10">
            <a id="speed_button" style="background-color: white;"  class="col-md-4 offset-5 btn btn-outline-success py-5">Speed!</a>
        </div>
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="player_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
    </div>
</div>

<!-- partial -->
